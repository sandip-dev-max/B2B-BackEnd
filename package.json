{
  "name": "b2b-backend",
  "version": "1.0.0",
  "description": "Backend system for B2B platform with role-based authentication (Admin & Company users). Built using Node.js, Express, TypeScript, and MySQL.",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec ts-node src/server.ts",
    "build": "rimraf dist && tsc",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "keywords": ["node", "express", "typescript", "mysql", "b2b", "backend"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "mysql2": "^3.14.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/helmet": "^4.0.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "rimraf": "^6.0.1"
  }
}
